<h1>Display your Pirate here</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3>
  <h3>Weight: <%= @pirate.weight %></h3>
  <h3>Height: <%= @pirate.height %></h3>
</div><br>

<h2>Display your first ship here</h2>
<h1>Ship 1</h1>
<% @ships.each.with_index do |ship, index| %>
  <div class="ship">
    <% if index == 0 %>
    <p>Name: <%= ship.name%></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <% end %>
  <% end %>
  </div><br>


<h2>Display your second ship here</h2>
<h1>Ship 2</h1>
<% @ships.each.with_index do |ship, index| %>
  <div class="ship">
    <% if index == 1 %>
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <% end %>
  <% end %>
  </div><br>